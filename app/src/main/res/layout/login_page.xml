<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.budi.caquapplicaton.regist.LoginPage">

    <LinearLayout
        android:id="@+id/formCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/rounded_card_background"
        android:backgroundTint="@color/white"
        android:elevation="4dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Isi form seperti sebelumnya -->
        <TextView
            android:id="@+id/loginTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/montserratsemibold"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="#42A5F5"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/loginSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserratmedium"
            android:gravity="center"
            android:text="@string/sign_in_to_continue"
            android:textColor="#A0A0A0"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_edittext_background"
            android:backgroundTint="#D3D3D3"
            android:hint="@string/username"
            android:inputType="text"
            android:fontFamily="@font/montserratmedium"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- Password Field with Show/Hide Icon -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_edittext_background"
                android:backgroundTint="#D3D3D3"
                android:hint="@string/password"
                android:fontFamily="@font/montserratmedium"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="48dp" />

            <ImageView
                android:id="@+id/showHidePasswordIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/show_hide_password"
                android:src="@drawable/baseline_visibility_off_24" />
        </FrameLayout>

        <TextView
            android:id="@+id/forgotPasswordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="4dp"
            android:text="@string/forgot_password"
            android:fontFamily="@font/montserratmedium"
            android:textColor="#42A5F5"
            android:textSize="12sp" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_background"
            android:text="@string/login"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="@font/montserratmedium"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/or_login_using_other_method"
            android:textColor="#A0A0A0"
            android:fontFamily="@font/light"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/googleSignInButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/google_sign_in"
            android:src="@drawable/google" />

        <TextView
            android:id="@+id/signupHereReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/light"
            android:gravity="center"
            android:text="@string/don_t_have_an_account_sign_up_here"
            android:textColor="#A0A0A0"
            android:textSize="12sp" />

    </LinearLayout>

    </RelativeLayout>
